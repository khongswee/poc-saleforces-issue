<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_progress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_alpha_90">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anchor"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/text_progress_margin_40"
        android:layout_marginTop="@dimen/text_progress_margin_top_48"
        android:layout_marginEnd="@dimen/text_progress_margin_40"
        android:gravity="center"
        tools:text="Title text" />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/text_progress_margin_40"
        android:layout_marginTop="@dimen/text_progress_margin_top_8"
        android:layout_marginEnd="@dimen/text_progress_margin_40"
        android:gravity="center"
        tools:text="Description text about what is happening meanwhile is loading so be patient my friend" />

    <View
        android:id="@+id/anchor"
        android:layout_width="@dimen/view_size_0"
        android:layout_height="@dimen/view_size_0"
        android:layout_centerInParent="true" />

    <com.scb.scbone.common.customview.CustomViewProgressAnimationFull
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />


</RelativeLayout>